{
  "name": "gmw-backend",
  "version": "1.0.0",
  "description": "backend services for grant management webapp",
  "main": "server.ts",
  "scripts": {
    "set": "npm install && npm run prepare",
    "dev": "NODE_ENV=dev nodemon ./src/server.ts",
    "start": "ts-node ./src/server.ts",
    "build": "tsc -p tsconfig.json && cp src/config/prod.env dist/config && cp src/db-dump/*.json dist/db-dump",
    "prod": "NODE_ENV=prod node ./dist/server",
    "docker-services-up": "sudo docker-compose up -d",
    "test": "NODE_ENV=test mocha -r ts-node/register ./src/tests/Unit/index.test.ts",
    "test:coverage": "nyc --reporter=text mocha -r ts-node/register ./src/tests/Unit/index.test.ts",
    "test:api": "NODE_ENV=test mocha --timeout 20000 -r ts-node/register ./src/tests/Api/api.test.ts",
    "test:api:coverage": "nyc --reporter=text mocha --timeout 30000 -r ts-node/register ./src/tests/Api/api.test.ts",
    "lint": "./node_modules/.bin/eslint 'src/**/*.ts'",
    "prettier": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "fix": "npm run prettier && npm run lint",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run fix"
    }
  },
  "author": "Antier Solutions Private Limited",
  "license": "Apache-2.0",
  "dependencies": {
    "@octokit/core": "^4.2.4",
    "@octokit/oauth-app": "^4.2.4",
    "@octokit/rest": "^19.0.13",
    "axios": "^1.4.0",
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "markdown-it": "^13.0.1",
    "markdown-it-front-matter": "^0.2.3",
    "markdown-table": "^3.0.3",
    "mocha": "^10.2.0",
    "mongodb": "^5.7.0",
    "mongoose": "^7.3.3",
    "octokit": "^2.0.22",
    "path": "^0.12.7",
    "redis": "^4.6.7",
    "sinon": "^15.2.0",
    "supertest": "^6.3.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/node": "^7.16.0",
    "@types/amqplib": "^0.8.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/js-yaml": "^4.0.5",
    "@types/markdown-it": "^13.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.5",
    "@types/request": "^2.48.8",
    "@types/sinon": "^10.0.16",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^9.0.2",
    "@types/validator": "^13.7.14",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "babel-cli": "^6.26.0",
    "braces": "^2.3.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "glob-parent": "^5.1.2",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "joi": "^17.9.1",
    "mocha": "^10.2.0",
    "nock": "^13.3.2",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "prettier": "^2.8.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "validate-branch-name": "^1.3.0"
  }
}
